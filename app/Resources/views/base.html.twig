{% set userLocale = app.request.locale %}

<!DOCTYPE html>
{% if userLocale == "pt_BR" %}
<!--[if IE 8 ]>    <html class="lt-ie10" lang="pt_BR"> <![endif]-->
<html lang="pt_BR">
{% else  %}
<!--[if IE 8 ]>    <html class="lt-ie10" lang="en"> <![endif]-->
<html lang="en">
{% endif %}
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="{% block description %}{% endblock %}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0; maximum-scale=1.0">
        <meta name="robots" content="index, follow">
        <meta name="author" content="php-br"/>
        <meta name="copyright" content="php-br"/>
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
        {# <link rel="apple-touch-icon" href="{{ asset('touch-icon-iphone.png') }}" />
        <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('apple-touch-icon-57x57.png') }}" />
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('apple-touch-icon-72x72.png') }}" />
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('apple-touch-icon-114x114.png') }}" />
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('apple-touch-icon-144x144.png') }}" /> #}

        {% block twitter %}{% endblock %}
        {% block facebook %}{% endblock %}
        {% block stylesheets %}{% endblock %}
        {% block extraMeta %}{% endblock %}
        {% block headscripts %}{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}

        {% javascripts
            'bundles/phpbrapp/assets/bower_components/jquery/dist/jquery.min.js'
            'bundles/phpbrapp/assets/bower_components/foundation/js/foundation.min.js'
            'bundles/phpbrapp/assets/bower_components/foundation/js/foundation/foundation.topbar.js'
            'bundles/phpbrapp/assets/bower_components/foundation/js/foundation/foundation.reveal.js'
            'bundles/phpbrapp/assets/bower_components/confirm-with-reveal/build/confirm_with_reveal.min.js'
            'bundles/phpbrapp/assets/bower_components/meltdown/js/lib/rangyinputs-jquery.min.js'
            'bundles/phpbrapp/assets/bower_components/meltdown/js/lib/element_resize_detection.js'
            'bundles/phpbrapp/assets/bower_components/meltdown/js/lib/js-markdown-extra.js'
            'bundles/phpbrapp/assets/bower_components/meltdown/js/jquery.meltdown.js'
            'bundles/phpbrapp/assets/js/vendor/*'
            'bundles/phpbrapp/assets/js/app.js'
        filter=""
        %}
        <script src='{{ asset_url }}' type='text/javascript'></script>
        {% endjavascripts %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
